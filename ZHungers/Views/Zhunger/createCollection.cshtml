            <input type="datetime-local" id="birthdaytime" name="callection_time">
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.PlacingDate, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="date" id="birthday" name="PlacingDate">
        </div>
    </div>
    <div>
        @Html.ActionLink("Logout", "Login")
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

